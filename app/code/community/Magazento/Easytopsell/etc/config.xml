<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Magazento_Easytopsell>
            <version>1.0.0</version>
        </Magazento_Easytopsell>
    </modules>
    <frontend>
        <layout>
            <updates>
                <easytopsell>
                    <file>magazento_easytopsell.xml</file>
                </easytopsell>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magazento_Easytopsell>
                    <files>
                        <default>Magazento_Easytopsell.csv</default>
                    </files>
                </Magazento_Easytopsell>
            </modules>
        </translate>
    </frontend>
    
    <global>
        <models>
            <easytopsell>
                <class>Magazento_Easytopsell_Model</class>
                <resourceModel>easytopsell_mysql4</resourceModel>
            </easytopsell>
            <easytopsell_mysql4>
                <class>Magazento_Easytopsell_Model_Mysql4</class>
                <entities>
                    <slide>
                        <table>magazento_easytopsell_slide</table>
                    </slide>
                    <slide_category>
                        <table>magazento_easytopsell_slide_category</table>
                    </slide_category>
                    <category>
                        <table>magazento_easytopsell_category</table>
                    </category>
                    <category_store>
                        <table>magazento_easytopsell_category_store</table>
                    </category_store>
                </entities>
            </easytopsell_mysql4>
        </models>
        <resources>
            <easytopsell_setup>
                <setup>
                    <module>Magazento_Easytopsell</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </easytopsell_setup>
            <easytopsell_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </easytopsell_write>
            <easytopsell_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </easytopsell_read>
        </resources>
        <blocks>
            <easytopsell>
                <class>Magazento_Easytopsell_Block</class>
            </easytopsell>
        </blocks>
        <helpers>
            <easytopsell>
                <class>Magazento_Easytopsell_Helper</class>
            </easytopsell>
        </helpers>
    </global>
    <admin>
        <routers>
            <magazento_easytopsell>
                <use>admin</use>
                <args>
                    <module>Magazento_Easytopsell</module>
                    <frontName>easytopsell</frontName>
                </args>
            </magazento_easytopsell>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <easytopsell translate="title" module="easytopsell">
                                            <title>Easytopsell</title>
                                        </easytopsell>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <magazento translate="title" module="easytopsell">
                <title>Magazento</title>
                <sort_order>65</sort_order>
                <children>
                    <easytopsell translate="title" module="easytopsell">
                        <title>Easytopsell</title>
                        <sort_order>65</sort_order>
                        <children>
                            <settings translate="title" module="easytopsell">
                                <title>Settings</title>
                                <action>adminhtml/system_config/edit/section/easytopsell</action>
                                <sort_order>40</sort_order>
                            </settings>
                        </children>
                    </easytopsell>
                </children>
            </magazento>
        </menu>
    </adminhtml>
    <default>
        <easytopsell>
            <options>
                <enable>1</enable>
                <blocktitle>TOPSELLERS</blocktitle>
                <noproducttext> We have no best-selling products now </noproducttext>
                <salable>1</salable>
            </options>
            <homepageoptions>
                <homecount>10</homecount>
                <homedays>365</homedays>
                <homecat>0</homecat>
                <homesidebarleft>1</homesidebarleft>
                <homesidebarright>2</homesidebarright>
                <homeactions>1</homeactions>
                <homeprice>1</homeprice>
            </homepageoptions>
            <catpageoptions>
                <catcount>5</catcount>
                <catdays>365</catdays>
                <catsidebarleft>1</catsidebarleft>
                <catsidebarright>2</catsidebarright>
                <catactions>1</catactions>
                <catprice>1</catprice>
            </catpageoptions>
        </easytopsell>
    </default>
</config>