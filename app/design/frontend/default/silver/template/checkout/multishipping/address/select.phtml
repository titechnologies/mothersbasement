<div class="page-head">
	<h3><?php echo $this->__('Change Billing Address') ?></h3>
</div>
<div class="a-right">
	<button type="button" class="form-button" onclick="setLocation('<?php echo $this->getAddNewUrl() ?>')"><span><?php echo $this->__('Add New Address') ?></span></button>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<br>
<div class="content-box">
<?php $_index=0 ?>
<?php foreach ($this->getAddressCollection() as $_address): ?>
	<?php if($_index%3==0): ?><div class="col3-set box-set"><?php endif; ?>
	<div class="col-<?php echo ($_index%3+1) ?>">
		<div class="content">
			<div class="inner-head">
				<a href="<?php echo $this->getEditAddressUrl($_address) ?>"><?php echo $this->__('Edit Address') ?></a>
				<a href="<?php echo $this->getSetAddressUrl($_address) ?>"><strong><?php echo $this->__('Select Address') ?></strong></a>
			</div>
			<address>
				<?php echo $_address->format('html') ?>
			</address>
			<?php if($this->isAddressDefaultBilling($_address)): ?>
				<p><strong><?php echo $this->__('Default Billing') ?></strong></p>
			<?php endif; ?>
			<?php if($this->isAddressDefaultShipping($_address)): ?>
				<p><strong><?php echo $this->__('Default Shipping') ?></strong></p>
			<?php endif; ?>
		</div>
	</div>
	<?php $_index++ ?>
	<?php if($_index && $_index%3==0): ?></div><br><?php endif; ?>
<?php endforeach; ?>
<?php if(!$_index || $_index%3!=0): ?></div><br><?php endif; ?>
</div>
<div class="button-set">
	<a href="<?php echo $this->getBackUrl() ?>" class="left">&laquo; <?php echo $this->__('Back to Billing Information') ?></a>
</div>
