 */
?>
<?php $_items = $this->getCollection() ?>
<?php if ($_items->getSize()) : ?>
	<ul class="catalog-list">
		<?php foreach ($_items as $_item) : ?>
			<li class="level-<?php echo $this->getLevel($_item) ?>">
				<a href="<?php echo $this->getItemUrl($_item) ?>"><?php echo $_item->name ?></a>
			</li>
		<?php endforeach; ?>
	</ul>
<?php else : ?>
	<div class="note-msg">
		<p><?php echo $this->__('There are no %s available.', $this->getItemsTitle()) ?></p>
	</div>
<?php endif ?>
