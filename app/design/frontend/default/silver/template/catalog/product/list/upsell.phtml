<?php if($this->getItemCollection()->getSize()): ?>
	<br>
	<div class="category-head">
		<h2><small><?php echo $this->__('You may also be interested in the following product(s)') ?></small></h2>
	</div>
	<?php $this->resetItemsIterator() ?>
	<?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
		<ul class="products-grid">
			<?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
				<?php if($_link=$this->getIterableItem()): ?>
					<li class="item">
						<a href="<?php echo $_link->getProductUrl() ?>" class="product-image" title="<?php echo $this->htmlEscape($_link->getName()) ?>">
							<img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(68, 68) ?>" width="68" height="68" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>">
						</a>
						<h5 class="name"><a href="<?php echo $_link->getProductUrl() ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h5>
						<?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
					</li>
				<?php else: ?>
				<?php endif; ?>
			<?php endfor; ?>
		</ul>
	<?php endfor; ?>
<?php endif; ?>
